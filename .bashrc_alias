# ls alias
export LS_OPTIONS='-F --color=auto'
    alias ls='ls $LS_OPTIONS'
    alias l='ls'
    alias ll='l -l'
    alias la='l -A'
    alias lla='l -lA'
    alias grep='grep $LS_OPTIONS'
    alias fgrep='fgrep $LS_OPTIONS'
    alias egrep='egrep $LS_OPTIONS'

# bc calculator alias
alias calc='bc -l'

# git alias
alias gti='git'
